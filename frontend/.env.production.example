# Production Environment Variables - Frontend

# ===== API CONFIGURATION =====
# Your Railway backend URL
NEXT_PUBLIC_API_URL=https://your-backend-url.up.railway.app

# ===== DEPLOYMENT INFO =====
NEXT_PUBLIC_APP_NAME=Thailand DEMS
NEXT_PUBLIC_APP_VERSION=2.0.0
NEXT_PUBLIC_ENVIRONMENT=production

# ===== FEATURE FLAGS =====
NEXT_PUBLIC_ENABLE_AI_CHATBOT=true
NEXT_PUBLIC_ENABLE_WEATHER=true
NEXT_PUBLIC_ENABLE_VOLUNTEER_PORTAL=false

# ===== MAP CONFIGURATION =====
NEXT_PUBLIC_DEFAULT_MAP_CENTER=[13.7563,100.5018]
NEXT_PUBLIC_DEFAULT_MAP_ZOOM=6

# ===== ANALYTICS (Optional) =====
# Google Analytics
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# ===== EXTERNAL SERVICES (Optional) =====
# Mapbox (if using instead of Leaflet)
NEXT_PUBLIC_MAPBOX_TOKEN=your_mapbox_token_here

# OpenWeatherMap (for enhanced weather)
NEXT_PUBLIC_WEATHER_API_KEY=your_openweathermap_key_here
